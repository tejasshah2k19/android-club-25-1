<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:id="@+id/imgViewHolder"
        android:src="@drawable/user_24"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_below="@id/imgViewHolder">

        <ImageButton
        android:layout_width="137dp"
        android:layout_height="match_parent"
        android:id="@+id/imgBtnContactAdd"
        android:src="@android:drawable/ic_menu_call"
        android:scaleType="centerInside"
        />
        <ImageButton
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:id="@+id/imgBtnContactSearch"
            android:backgroundTint="@color/lg"
            android:src="@android:drawable/ic_menu_search"


            />
        <ImageButton
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:id="@+id/imgBtnContactUser"
            android:backgroundTint="@color/lg"
            android:src="@drawable/user_24"
            />
    </LinearLayout>

</RelativeLayout>